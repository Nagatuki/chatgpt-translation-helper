{
    "manifest_version": 3,
    "name": "ChatGPT Translation Helper",
    "version": "0.1",
    "description": "ChatGPTの画面を左右に分割して、原文と訳文を見やすく表示します。",
    "permissions": ["scripting", "activeTab"],
    "content_scripts": [
      {
        "matches": ["https://chatgpt.com/*"],
        "js": ["content.js"],
        "css": ["styles.css"]
      }
    ],
    "action": {
      "default_title": "ChatGPT Translation Helper"
    }
  }
  